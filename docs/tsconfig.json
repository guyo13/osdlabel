{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["../src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".astro"
  ]
}
